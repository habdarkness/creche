datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
}

generator client {
	provider = "prisma-client-js"
}

model User {
	id			Int		@id @default(autoincrement())
	name		String
	email		String	@unique
	password	String
	level		Int
	students	Student[]
}

model Student {
	id			Int		@id @default(autoincrement()) 
	name		String
	parent_id	Int
	parent		User	@relation(fields: [parent_id], references: [id])
}
